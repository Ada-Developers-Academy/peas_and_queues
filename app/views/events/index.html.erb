<h3> Events </h3>

<div id='events'>
  <%= calendar do |date| %>
    <%= date.day %>
    <% if @events_by_date[date] %>
      <ul>
        <% @events_by_date[date].each do |event| %>
          <li><%= link_to event.name, event_path(event.id) %></li>
        <% end %>
      </ul>
    <% end %>
  <% end %>

</div>