<div class="row">
  <div class='small-10 columns'>
    <div id='events'>
      <h2 id='month'>
      <%= link_to "<", date: @date.prev_month %>
      <%= @date.strftime("%B %Y") %>
      <%= link_to ">", date: @date.next_month %>
    </h2>
      <%= calendar @date do |date| %>
        <%= date.day %>
        <% if @events_by_date[date] %>
          <ul>
            <% @events_by_date[date].each do |event| %>
            <li>
              <%= link_to event.name, "#inline_#{event.name[0..3].strip!}", class: 'inline' %> <br>
              <div class='hidden'>
                <div id='inline_<%= event.name[0..3].strip! %>', style='background: #fff; padding: 20px;'>
                  <h2>Event: <%= event.name %></h2>
                  <p><%= event.description %></p>
                  Weather: <%= event.temperature %> &deg; <br>
                  Conditions: <%= event.conditions %><br>
                </div>
              </div>
            </li>
            <% end %>
          </ul>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
<% if current_user %>
  <%= link_to 'Add an event!', new_event_path %>
  <% end %>