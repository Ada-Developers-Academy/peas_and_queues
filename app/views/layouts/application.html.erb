<!DOCTYPE html>
<html>
<head>
  <title>PeasAndQueues</title>
  <%= stylesheet_link_tag    "application", media: "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
   <!-- Navigation -->
 
  <nav class="top-bar" data-topbar>
    <ul class="title-area">
      <!-- Title Area -->
      <li class="name">
        <h1>
        <%= link_to "Peas 'n' Queues", root_path %>
          </a>
        </h1>
      </li>
      <li class="toggle-topbar menu-icon"><a href="#"><span>menu</span></a></li>
    </ul>
 
    <section class="top-bar-section">
      <!-- Right Nav Section -->
      <ul class="right">
          <% if current_user %>
          <li><%= link_to 'Sign Out', '/signout' %></li>
          <li><%= link_to 'Profile', profile_path(current_user.id), "data-reveal-id" => "myModal"  %></li>
          <% else %>
          <li><%= link_to 'Sign In With Twitter', '/auth/twitter' %></li>
          <% end %>
        <li class="divider"></li>
        <li class="has-dropdown">
          <a href="#">Garden Resources</a>
          <ul class="dropdown">
            <li><label>Community</label></li>
            <li><a href="#">Tool Lending Library</a></li>
                <li><%= link_to 'Calendar', events_path %></li>
            <li class="divider"></li>
            <li><label>News</label></li>
            <li><a href="#">Blog</a></li>
            <li><a href="#">Weather</a></li>
          </ul>
        </li>
      </ul>
    </section>
  </nav>


 
  <!-- End Top Bar -->

<%= yield %>

    <div id="myModal" class="reveal-modal" data-reveal>
        <%= form_for current_user  do |f| %>
    <div class='small-10 columns'>
      <%= f.label :email %>
      <%= f.text_field :email %>
    </div>
    <div class='small-10 columns'>
      <%= f.label :phone %>
      <%= f.text_field :phone %>
    </div>
    <%= f.submit %>
    <!-- id:'ajax-submit', class: "close-reveal-modal", remote:true -->
    <br><br><br>
  <% end %>
    </div>

  </div>
</body>
</html>
